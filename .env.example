# =========================================
# ENVIRONMENT VARIABLES - TEMPLATE
# =========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# =========================================
# SUPABASE (Required)
# =========================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ⚠️ SENSITIVE: Service Role Key (bypasses RLS)
# Only use server-side, NEVER expose to client
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =========================================
# EVOLUTION API (WhatsApp) (Required)
# =========================================
# Your Evolution API instance URL and global API key

NEXT_PUBLIC_EVOLUTION_API_URL=https://evolution.example.com
EVOLUTION_API_GLOBAL_KEY=your-evolution-global-api-key

# =========================================
# AI PROVIDERS (Required for AI features)
# =========================================

# SiliconFlow (Primary AI provider)
SILICONFLOW_API_KEY=sk-xxxxxxxxxxxxx
SILICONFLOW_API_URL=https://api.siliconflow.cn/v1

# SiliconFlow Models (Optional - defaults provided)
SILICONFLOW_MODEL_GENERAL=Qwen/Qwen2.5-72B-Instruct
SILICONFLOW_MODEL_FAST=Qwen/Qwen2.5-7B-Instruct
SILICONFLOW_MODEL_CODING=deepseek-ai/DeepSeek-V3
SILICONFLOW_MODEL_SENTIMENT=Yi-34B-Chat

# OpenRouter (Fallback AI provider)
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxx

# OpenRouter Models (Optional - defaults provided)
OPENROUTER_MODEL_GENERAL=qwen/qwen-2.5-72b-instruct
OPENROUTER_MODEL_FAST=qwen/qwen-2.5-7b-instruct
OPENROUTER_MODEL_CODING=deepseek/deepseek-chat
OPENROUTER_MODEL_SENTIMENT=qwen/qwen-2.5-7b-instruct

# =========================================
# STRIPE (Required for payments)
# =========================================
# Get these from: https://dashboard.stripe.com/apikeys

NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxx
# OR for testing:
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx

# ⚠️ SENSITIVE: Secret Key
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxx
# OR for testing:
# STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx

# ⚠️ SENSITIVE: Webhook Secret
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# =========================================
# APPLICATION (Required)
# =========================================

# Your production domain (used for webhooks, redirects, etc.)
NEXT_PUBLIC_APP_URL=https://crmia.eu
# OR for development:
# NEXT_PUBLIC_APP_URL=http://localhost:3000

# =========================================
# OPTIONAL SETTINGS
# =========================================

# Node Environment
NODE_ENV=production
# OR for development:
# NODE_ENV=development

# =========================================
# SECURITY CHECKLIST
# =========================================
# ✅ .env is in .gitignore
# ✅ Service role key NEVER used client-side
# ✅ Stripe secret key NEVER exposed
# ✅ All keys rotated regularly
# ✅ Production keys different from test keys

# =========================================
# DEPLOYMENT NOTES
# =========================================
#
# Vercel:
# - Add these as Environment Variables in project settings
# - Use different values for Preview vs Production
#
# Local Development:
# 1. Copy this file to .env
# 2. Fill in your test/dev credentials
# 3. Run: npm run dev
#
